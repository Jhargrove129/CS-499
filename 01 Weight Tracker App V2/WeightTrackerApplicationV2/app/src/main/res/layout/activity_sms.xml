<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SmsActivity">

    <TextView
        android:id="@+id/smsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Notifications"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/smsExplanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We’ll help you keep your goals in check (and your snacks in checkmate). Allow SMS updates so we can nudge you when the scale tips, the milestones hit, or when it’s time to celebrate progress!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/smsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/allowSmsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Allow SMS Notifications"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/smsExplanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/denySmsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deny"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/allowSmsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/smsStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Permission Status: Not Checked"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/denySmsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
